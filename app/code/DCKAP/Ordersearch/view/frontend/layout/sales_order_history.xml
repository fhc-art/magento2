<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <head>
        <css src="DCKAP_Ordersearch::css/style.css" />
    </head>

    <update handle="customer_account"/>

    <body>        
        <referenceBlock name="sales.order.history">
            <block class="DCKAP\Ordersearch\Block\Order\Filter" ifconfig="ordersearch/general/enable" name="ordersearch.fields.filter" cacheable="false" >
	            <block class="DCKAP\Ordersearch\Block\Order\Filter" ifconfig="ordersearch/settings/enable_date_filter" name="ordersearch.fields.date" cacheable="false" template="order/filter/date.phtml" /> 
	        </block>
            <action method="setTemplate" ifconfig="ordersearch/general/enable">
                <argument name="template" xsi:type="string">DCKAP_Ordersearch::order/history.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
