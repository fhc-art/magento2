<script type="text/javascript">

    require([
        'jquery',
        'mage/mage'
    ], function($) {

        var ignore = null;
        var dataForm = $('#ordersearch-paid-form');
        $('#ordersearch-paid-form #date_range').hide();

        function getOrderResult() {

            var formData = jQuery(dataForm).serialize();
            jQuery.ajax({
                showLoader: true,
                type: "POST",
                url: '<?php echo $block->getAjaxUrl(); ?>',
                data: formData,
                success: function(result) {
                    var data = $('<div />').append(result).find('.credit-paid-order').html();
                    $('.credit-paid-order').html(data);
                },
                error: function(error) {
                    console.log(error);
                    jQuery('#result').html(error);
                }
            });
        }

        $('#ordersearch-paid-form #ordersearch').click(function() {
            getOrderResult();
            return false;

        });

        /* reset form */
        $('#ordersearch-paid-form #ordersearch-clear').click(function() {

            $("#ordersearch-paid-form").trigger('reset');
            $('#ordersearch-paid-form #order_from_date').val('');
            $('#ordersearch-paid-form #order_to_date').val('');
            $('#ordersearch-paid-form #filter_id').val('');
            $('#ordersearch-paid-form #filter_value').val('');
            $('#ordersearch-paid-form #date_range').dateRange('destroy');
            $("#ordersearch-paid-form #date_range").dateRange({
                from:{
                    id:"order_from_date_paid"
                },
                to:{
                    id:"order_to_date_paid",
                    minDate : 0
                },
                dateFormat : "mm/dd/yy",
                maxDate : 0
            });
            getOrderResult();
            return false;

        });

        $('#ordersearch-paid-form #filter_id').change(function() {
            if ($('#ordersearch-paid-form #filter_id').val() === 'created_at') {
                $('#ordersearch-paid-form #date_range').show();
                $('#ordersearch-paid-form .field-name-filter_value').hide();
            } else {
                $('#ordersearch-paid-form #date_range').hide();
                $('#ordersearch-paid-form .field-name-filter_value').show();
            }
            $('#ordersearch-paid-form #filter_value').val('');
        });

    });
</script>