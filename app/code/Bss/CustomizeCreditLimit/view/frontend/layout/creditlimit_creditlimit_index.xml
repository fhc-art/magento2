<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <block class="Bss\CustomizeCreditLimit\Block\CreditLimit\Index" name="creditlimit-view" template="Bss_CustomizeCreditLimit::creditlimit/index.phtml" cacheable="false">
                <block class="Magento\Theme\Block\Html\Pager" name="credit_order_pager"/>
                <block class="Bss\CustomizeCreditLimit\Block\CreditLimit\Filter" name="creditsearch.fields" cacheable="false" template="filter.phtml" />
                <block class="Bss\CustomizeCreditLimit\Block\CreditLimit\FilterPaid" name="creditsearch.paid.fields" cacheable="false" template="filter_paid.phtml" />
            </block>
        </referenceContainer>
    </body>
</page>