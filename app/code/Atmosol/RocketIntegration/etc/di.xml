<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Atmosol\RocketIntegration\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Atmosol\RocketIntegration\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">rocket</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Atmosol\RocketIntegration\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\App\Request\CsrfValidator">
        <plugin name="csrf_validator_skip" type="Atmosol\RocketIntegration\Plugin\CsrfValidatorSkip" />
    </type>
</config>