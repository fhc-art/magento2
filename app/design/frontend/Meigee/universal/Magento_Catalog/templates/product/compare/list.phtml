                        <td data-th="<?php echo $block->escapeHtml(__('Product')); ?>" class="cell product">
                            <a class="product-item-photo" href="<?php /* @escapeNotVerified */ echo $block->getProductUrl($item) ?>" title="<?php /* @escapeNotVerified */ echo $block->stripTags($item->getName(), null, true) ?>">
